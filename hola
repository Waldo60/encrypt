#!/bin/bash

#>./encrypter
#>./decrypter
#exit

{
        echo '#!/usr/bin/python3.4'
        echo 'import sys'
        echo 'flnm = input("(true)filename>")'
        echo "fl = open(flnm, 'r')"
        echo 'vl = fl.readline'
        echo "flres = open(flnm+'.res', 'w')"
        echo "while True:"
        echo "  ld = fl.read(1)"
        echo "  if ld == 'q':"
        echo "          flres.write('!')"
        echo "          print('b') "
        echo "  if ld == 'w':"
        echo "          flres.write('.')"
        echo "          print('c') "
        echo "  if ld == 'e':"
        echo "          flres.write('<')"
        echo "          print('b') "
        echo "  if ld == 'r':"
        echo "          flres.write('|')"
        echo "          print('c')"
        echo "  if ld == 't':"
        echo "          flres.write('=')"
        echo "          print('b') "
        echo "  if ld == 'y':"
        echo "          flres.write(')')"
        echo "          print('c') "
        echo "  if ld == 'u':"
        echo "          flres.write('(')"
        echo "          print('b') "
        echo "  if ld == 'i':"
        echo "          flres.write('$')"
        echo "          print('c') "
        echo "  if ld == 'o':"
        echo "          flres.write('_')"
        echo "          print('b') "
        echo "  if ld == 'p':"
        echo "          flres.write(']')"
        echo "          print('c') "
        echo "  if ld == 'a':"
        echo "          flres.write('[')"
        echo "          print('b') "
        echo "  if ld == 's':"
        echo "          flres.write('м')"
        echo "          print('c') "
        echo "  if ld == 'd':"
        echo "          flres.write('{')"
        echo "          print('b') "
        echo "  if ld == 'f':"
        echo "          flres.write('}')"
        echo "          print('c') "
        echo "  if ld == 'g':"
        echo "          flres.write('?')"
        echo "          print('b') "
        echo "  if ld == 'h':"
        echo "          flres.write('~')"
        echo "          print('c') "
        echo "  if ld == 'j':"
        echo "          flres.write('@')"
        echo "          print('b') "
        echo "  if ld == 'k':"
        echo "          flres.write('^')"
        echo "          print('b') "
        echo "  if ld == 'l':"
        echo "          flres.write('&')"
        echo "          print('c') "
        echo "  if ld == 'z':"
        echo "          flres.write('*')"
        echo "          print('b') "
        echo "  if ld == 'x':"
        echo "          flres.write('>')"
        echo "          print('c') "
        echo "  if ld == 'c':"
        echo "          flres.write('#')"
        echo "          print('b') "
        echo "  if ld == 'v':"
        echo "          flres.write(':')"
        echo "          print('c') "
        echo "  if ld == 'b':"
        echo "          flres.write(';')"
        echo "          print('b') "
        echo "  if ld == 'n':"
        echo "          flres.write(',')"
        echo "          print('c') "
        echo "  if ld == 'm':"
        echo "          flres.write('ё')"
        echo "          print('c') "
        echo "  if ld == ' ':"
        echo "          flres.write('й')"
        echo '          print("") '    
} > ./encrypter
chmod +x ./encrypter
sudo cp ./encrypter /bin
rm ./encrypter


{
        echo '#!/usr/bin/python3.4'
        echo 'import sys'
        echo 'flnm = input("(true)filename>")'
        echo "fl = open(flnm, 'r')"
        echo 'vl = fl.readline'
        echo "flres = open(flnm+'.res', 'w')"
        echo "while True:"
        echo "  ld = fl.read(1)"
        echo "  if ld == '!':"
        echo "          flres.write('q')"
        echo "          print('b') "
        echo "  if ld == '.':"
        echo "          flres.write('w')"
        echo "          print('c') "
        echo "  if ld == '<':"
        echo "          flres.write('e')"
        echo "          print('b') "
        echo "  if ld == '|':"
        echo "          flres.write('r')"
        echo "          print('c')"
        echo "  if ld == '=':"
        echo "          flres.write('t')"
        echo "          print('b') "
        echo "  if ld == ')':"
        echo "          flres.write('y')"
        echo "          print('c') "
        echo "  if ld == '(':"
        echo "          flres.write('u')"
        echo "          print('b') "
        echo "  if ld == '$':"
        echo "          flres.write('i')"
        echo "          print('c') "
        echo "  if ld == '_':"
        echo "          flres.write('o')"
        echo "          print('b') "
        echo "  if ld == ']':"
        echo "          flres.write('p')"
        echo "          print('c') "
        echo "  if ld == '[':"
        echo "          flres.write('a')"
        echo "          print('b') "
        echo "  if ld == 'м':"
        echo "          flres.write('s')"
        echo "          print('c') "
        echo "  if ld == '{':"
        echo "          flres.write('d')"
        echo "          print('b') "
        echo "  if ld == '}':"
        echo "          flres.write('f')"
        echo "          print('c') "
        echo "  if ld == '?':"
        echo "          flres.write('g')"
        echo "          print('b') "
        echo "  if ld == '~':"
        echo "          flres.write('h')"
        echo "          print('c') "
        echo "  if ld == '@':"
        echo "          flres.write('j')"
        echo "          print('b') "
        echo "  if ld == '^':"
        echo "          flres.write('k')"
        echo "          print('b') "
        echo "  if ld == '&':"
        echo "          flres.write('l')"
        echo "          print('c') "
        echo "  if ld == '*':"
        echo "          flres.write('z')"
        echo "          print('b') "
        echo "  if ld == '>':"
        echo "          flres.write('x')"
        echo "          print('c') "
        echo "  if ld == '#':"
        echo "          flres.write('c')"
        echo "          print('b') "
        echo "  if ld == ':':"
        echo "          flres.write('v')"
        echo "          print('c') "
        echo "  if ld == ';':"
        echo "          flres.write('b')"
        echo "          print('b') "
        echo "  if ld == ',':"
        echo "          flres.write('n')"
        echo "          print('c') "
        echo "  if ld == 'ё':"
        echo "          flres.write('m')"
        echo "          print('c') "
        echo "  if ld == 'й':"
        echo "          flres.write(' ')"
        echo '          print("") '    
} > ./dencrypter

